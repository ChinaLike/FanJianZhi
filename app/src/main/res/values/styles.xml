    <style name="LoginEt">
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">@dimen/margin_12</item>
        <item name="android:paddingLeft">@dimen/margin_12</item>
        <item name="android:background">@drawable/icon_et_shap</item>
        <item name="android:drawablePadding">@dimen/margin_8</item>
        <item name="ic_icon_height">24dp</item>
        <item name="ic_icon_width">24dp</item>
    </style>

    <style name="ComplainedRb">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="ItemIconStyle">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/text_gray_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:drawablePadding">@dimen/margin_4</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="BtStyle">
        <item name="android:textSize">@dimen/text_larger</item>
        <item name="android:height">@dimen/bt_h_50</item>
    </style>

    <!--水波纹布局风格-->
    <style name="RippleLayoutStyle">
        <item name="mrl_rippleAlpha">0.2</item>
        <item name="mrl_rippleBackground">@color/white</item>
        <item name="mrl_rippleColor">@color/rippleDefaultColor</item>
    </style>

    <!--Bar的图标风格-->
    <style name="BarImgStyle">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/selector_bar_transparent</item>
    </style>

    <style name="GiftHintStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:paddingLeft">@dimen/margin_16</item>
        <item name="android:paddingRight">@dimen/margin_16</item>
        <item name="android:textColor">@color/text_gray_color</item>
    </style>

    <style name="GiftContentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:paddingLeft">@dimen/margin_16</item>
        <item name="android:paddingRight">@dimen/margin_16</item>
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
