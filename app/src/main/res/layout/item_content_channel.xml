<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_8"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:paddingTop="@dimen/margin_8">


        <com.lyy.ui.widget.CircleImageView
            android:id="@+id/img"
            android:layout_width="@dimen/bt_h_48"
            android:layout_height="@dimen/bt_h_48"
            android:src="@mipmap/icon_def_icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_toRightOf="@+id/img"
            android:gravity="center"
            android:text="ssss"
            android:textColor="@color/text_black_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/title"
            android:background="@drawable/gray_num_skore_shape"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/margin_4"
            android:paddingRight="@dimen/margin_4"
            android:paddingTop="2dp"
            android:text="100"
            android:textColor="@color/text_gray_color"
            android:textSize="@dimen/text_mini" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_4"
            android:layout_toLeftOf="@+id/arrow"
            android:text="更多"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_Increase_larger" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="16dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_yellow_right_arrow" />

    </RelativeLayout>
</LinearLayout>