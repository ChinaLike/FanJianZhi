<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bt_h_48"
    android:background="@color/background_color"
    android:paddingBottom="@dimen/margin_8"
    android:paddingLeft="@dimen/margin_16"
    android:paddingRight="@dimen/margin_16"
    android:paddingTop="@dimen/margin_8">

    <com.lyy.ui.widget.IconEditText
        android:id="@+id/comment_et"
        style="@style/LoginEt"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_toLeftOf="@+id/comment"
        android:drawableLeft="@mipmap/icon_et_art_comment"
        android:hint="我来说两句"
        android:textSize="@dimen/text_larger" />

    <com.lyy.ui.widget.IconText
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_toLeftOf="@+id/share"
        android:background="@drawable/selector_bar_transparent"
        android:drawableLeft="@mipmap/icon_art_comment_bt"
        android:gravity="center"
        android:textColor="@color/text_black_color"
        app:icon_h="@dimen/img_h_24"
        app:icon_w="@dimen/img_h_24" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_toLeftOf="@+id/more"
        android:background="@drawable/selector_bar_transparent"
        android:src="@mipmap/icon_share" />

    <ImageView
        android:id="@+id/more"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_bar_transparent"
        android:src="@mipmap/icon_more" />

</RelativeLayout>