<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:padding="@dimen/margin_16">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/img_text_h"
            android:layout_height="@dimen/img_text_h"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_toRightOf="@+id/img"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="普通玩家\nhhh"
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/text_Increase_larger" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/title"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="中国游客"
            android:textColor="@color/text_gray_color"
            android:textSize="@dimen/text_medium" />

        <com.touchrom.fanjianzhi.widget.ItemBottomBar
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_alignLeft="@+id/title"
            android:layout_marginTop="@dimen/margin_8" />

        <TextView
            android:id="@+id/art_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:background="@drawable/yellow_rectangle"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/margin_4"
            android:paddingRight="@dimen/margin_4"
            android:paddingTop="2dp"
            android:text="贱原创"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />
</LinearLayout>